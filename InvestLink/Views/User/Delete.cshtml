
@using Microsoft.AspNetCore.Identity
@model IdentityUser

@{
    ViewBag.Title = "Delete";
}

<div class="card">
    <div class="card-body">
        <div class="border p-3 rounded">
     
            <hr>


            <form asp-controller="User" asp-action="Delete" class="row g-3">

                <input type="hidden" asp-for="Id">

                <div class="col-12">
                    <label asp-for="UserName" class="form-label">الاسم</label>
                    <input asp-for="UserName" class="form-control" readonly />
                </div>

                <div class="col-12">
                    <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                    <input asp-for="Email" class="form-control" type="email" readonly />
                </div>



                <div class="col-md-6">
                        <input type="submit" value="حذف" class="btn btn-success px-4" />


                        <a asp-controller="User" asp-action="Index" class="btn btn-secondary btn-sm px-4">الرجوع </a>

                   
                </div>
            </form>
        </div>
    </div>
</div>
