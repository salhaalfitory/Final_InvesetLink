
@using InvestLink_BLL.Models
@using Microsoft.AspNetCore.Identity
@model EmployeeVM
@inject RoleManager<IdentityRole> roleManager

@{
    var roles = roleManager.Roles;
    ViewBag.Title = "Create ";
}

<div class="card">
    <div class="card-body">
        <div class="border p-3 rounded">
            <h6 class="mb-0 text-uppercase">إضافة موظف جديد</h6>
            <hr>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <form asp-controller="User" asp-action="Create" class="row g-3">

                <input type="hidden" asp-for="Id">
                <div class="col-12">
                <label asp-for="Name" class="form-label">الاسم</label>
                <input asp-for="Name" class="form-control" placeholder=" ادخال اسم الموظف" />
                <span asp-validation-for="Name" class="text-danger"></span>
               </div>

        <div class="col-12">
            <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
            <input asp-for="Email" class="form-control" type="email" placeholder="example@mail.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <

        <div class="col-md-6">
            <label asp-for="Password" class="form-label">كلمة المرور</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="أدخل كلمة مرور قوية" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>


        <div class="col-md-6">
            <label asp-for="Role" class="form-label">الصلاحية</label>
                    <select asp-for="Role" class="form-select" >
                        <option value="">اختر الصلاحية</option>
                        @foreach (var role in roles)
                        {
                            <option value="@role">@role.Name</option>
                        }
                        
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>



                <div class="col-md-6">
                    <input type="submit" value="حفظ" class="btn btn-success waves-effect" />


                    <a asp-controller="User" asp-action="Index" class="btn btn-outline-secondary px-4">الرجوع </a>
                </div>
                 
            </form>
        </div>
    </div>

</div>

