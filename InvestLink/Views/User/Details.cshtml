@using Microsoft.AspNetCore.Identity
@model IdentityUser

@{
    ViewBag.Title = "Details ";
}

<div class="card">
    <div class="card-body">
        <div class="border p-3 rounded">
            @* <h6 class="mb-0 text-uppercase">إضافة موظف جديد</h6> *@
            <hr>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <form asp-controller="User" asp-action="Details" class="row g-3">

                <div class="col-12">
                    <label asp-for="UserName" class="form-label">الاسم</label>
                    <input asp-for="UserName" class="form-control" readonly />
                </div>

                <div class="col-12">
                    <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                    <input asp-for="Email" class="form-control" type="email"  readonly />
                </div>

                @* <div class="col-12">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label">
                            تفعيل الحساب (Active)
                        </label>
                    </div>
                </div> *@

                <div class="col-12">
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <input type="submit" value="حفظ" class="btn btn-success px-4" />


                        <a asp-controller="User" asp-action="Index" class="btn btn-secondary btn-sm px-4">الرجوع </a>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>