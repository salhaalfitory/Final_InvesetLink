@model InvestLink_BLL.Models.LicenseVM

@{
    ViewData["Title"] = "تفاصيل الترخيص";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ترخيص تنفيذ مشروع استثماري</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Amiri:ital,wght@0,400;0,700;1,400&family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f3f4f6;
            font-family: 'Amiri', serif;
        }

        .paper {
            background-color: #fff;
            background-image: radial-gradient(#e5e7eb 1px, transparent 1px), radial-gradient(#e5e7eb 1px, transparent 1px);
            background-size: 20px 20px;
            background-position: 0 0, 10px 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
            width: 210mm;
            height: 297mm; /* A4 Height */
            margin: 0 auto;
        }

        /* Intricate Border Effect */
        .guilloche-border {
            border: 2px solid #5d6d7e;
            padding: 4px;
            height: 100%;
            position: relative;
            box-sizing: border-box; /* Important for padding calculation */
        }

        .guilloche-inner {
            border: 1px solid #5d6d7e;
            border-style: double;
            border-width: 4px;
            height: 100%;
            padding: 20px;
            position: relative;
            background: linear-gradient(45deg, transparent 48%, #9ca3af 49%, #9ca3af 51%, transparent 52%) 0 0 / 10px 10px, linear-gradient(-45deg, transparent 48%, #9ca3af 49%, #9ca3af 51%, transparent 52%) 0 0 / 10px 10px;
            box-sizing: border-box;
        }

        .content-layer {
            background-color: rgba(255, 255, 255, 0.95);
            height: 100%;
            padding: 20px;
            position: relative;
            z-index: 10;
            display: flex;
            flex-direction: column;
        }

        .watermark-logo {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0.08;
            width: 400px;
            z-index: 0;
            pointer-events: none;
        }

        .official-seal {
            width: 120px;
            height: 120px;
            border: 4px double #2c5282;
            border-radius: 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            font-size: 10px;
            color: #2c5282;
            font-weight: bold;
            text-align: center;
            margin: 0 auto;
            opacity: 0.8;
            background: rgba(255,255,255,0.5);
        }

        .details-grid {
            display: grid;
            grid-template-columns: auto 1fr;
            gap: 8px 16px;
            align-items: baseline;
        }

        .bullet-list {
            list-style-type: none;
            counter-reset: css-counter 0;
        }

        .bullet-list li {
            position: relative;
            margin-bottom: 6px;
            padding-right: 20px;
        }

        .bullet-list li::before {
            counter-increment: css-counter 1;
            content: counter(css-counter) ".";
            position: absolute;
            right: 0;
            font-weight: bold;
        }

        /* ========================================= */
        /* إعدادات الطباعة الصحيحة       */
        /* ========================================= */
        media print {
            page {
                size: A4;
                margin: 0; /* إلغاء الهوامش من إعدادات الطابعة */
            }

            body {
                margin: 0;
                padding: 0 !important;
                background-color: white;
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
                width: 210mm;
                height: 297mm;
            }

            .paper {
                margin: 0;
                border: none;
                width: 210mm;
                height: 297mm;
                box-shadow: none;
                page-break-after: always;
                page-break-inside: avoid;
                
                /* حيلة مهمة: تصغير المحتوى قليلاً (98%) لمنع الطابعة
                   من إضافة صفحة ثانية بسبب الحدود الخارجية 
                */
                transform: scale(0.98); 
                transform-origin: top center;
            }

            /* إخفاء الأزرار */
            .no-print, .btn, .fixed, ion-icon {
                display: none !important;
            }

            /* التأكد من أن الحدود تظهر */
            .guilloche-border, .guilloche-inner {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }
    </style>
</head>

<body class="py-8 flex justify-center min-h-screen">

    @* //طباعة *@
    <div class="fixed top-4 left-4 flex gap-2 no-print z-50">
        <div class="col-12 col-lg-6 text-md-end">
            <a href="javascript:;" onclick="window.print()" class="mt-2 btn btn-outline-primary bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 transition">
                طباعة <span class="text-xs">(Print)</span>
            </a>
        </div>
    </div>


    @* <button id="printScheduleBtn" class="mt-2 btn btn-outline-primary">
