@model InvestLink_BLL.Models.LicenseVM

@{
    ViewData["Title"] = "ترخيص استثمار";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <title>ترخيص مشروع استثماري</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Amiri:ital,wght@0,400;0,700;1,400&family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --page-width: 210mm;
            --page-height: 296mm; /* أقل بمليمتر لضمان عدم القص */
        }

        body {
            margin: 0;
            padding: 0;
            background-color: #555; /* لون خلفية للتمييز أثناء التصميم */
            font-family: 'Amiri', serif;
        }

        .page-container {
            width: var(--page-width);
            height: var(--page-height);
            background: white;
            margin: 20px auto;
            position: relative;
            box-shadow: 0 0 10px rgba(0,0,0,0.5);
            /* هذا السطر يمنع ظهور صفحة ثانية نهائياً */
            overflow: hidden; 
        }

        /* الإطار المزخرف */
        .guilloche-border {
            width: 100%;
            height: 100%;
            padding: 5px;
            box-sizing: border-box;
            border: 2px solid #5d6d7e;
        }

        .guilloche-inner {
            width: 100%;
            height: 100%;
            border: 4px double #5d6d7e;
            padding: 15px; /* هوامش داخلية */
            box-sizing: border-box;
            background: 
                linear-gradient(45deg, transparent 48%, #e5e7eb 49%, #e5e7eb 51%, transparent 52%) 0 0 / 10px 10px, 
                linear-gradient(-45deg, transparent 48%, #e5e7eb 49%, #e5e7eb 51%, transparent 52%) 0 0 / 10px 10px;
            display: flex;
            flex-direction: column;
        }

        .content-layer {
            background-color: rgba(255, 255, 255, 0.96);
            flex: 1; /* يأخذ كامل المساحة المتاحة */
            display: flex;
            flex-direction: column; /* ترتيب العناصر عمودياً */
            padding: 10px 20px;
            position: relative;
        }

        /* تنسيق النصوص */
        h1, h2, h3 { font-family: 'Cairo', sans-serif; line-height: 1.2; }
        p, li { line-height: 1.4; font-size: 13px; color: #333; }
        
        .header-section { flex-shrink: 0; } /* الرأس ثابت لا يتقلص */
        .body-section { flex-grow: 1; display: flex; flex-direction: column; justify-content: flex-start; } /* الوسط مرن */
        .footer-section { flex-shrink: 0; margin-top: auto; } /* التذييل ثابت في الأسفل */

        .watermark {
            position: absolute;
            top: 50%; left: 50%;
            transform: translate(-50%, -50%);
            width: 350px; opacity: 0.05;
            pointer-events: none; z-index: 0;
        }

        /* الجداول والقوائم */
        .details-box {
            background: #f9fafb;
            border: 1px solid #d1d5db;
            padding: 10px;
            border-radius: 4px;
            margin-bottom: 10px;
        }
        
        .row-line {
            display: flex;
            align-items: baseline;
            margin-bottom: 4px;
            font-size: 14px;
        }
        .row-label { font-weight: bold; width: 110px; flex-shrink: 0; }
        .row-value { border-bottom: 1px dotted #000; flex-grow: 1; padding-bottom: 2px; }

        /* إعدادات الطباعة */
        media print {
            page {
                size: A4;
                margin: 0; /* إلغاء هوامش الطابعة الإجبارية */
            }

            body {
                background: white;
                margin: 0;
                padding: 0;
                width: 210mm;
                height: 297mm;
            }

            .page-container {
                margin: 0;
                box-shadow: none;
                border: none;
                /* تصغير الصفحة قليلاً لضمان عدم الخروج */
                transform: scale(0.96); 
                transform-origin: top center;
                height: 100%;
            }

            .no-print { display: none !important; }
        }
    </style>
</head>
<body>

    <div class="fixed top-4 left-4 no-print z-50">
        <button onclick="window.print()" class="bg-blue-600 text-white px-6 py-2 rounded shadow hover:bg-blue-700 font-bold">
            طباعة (Print)
        </button>
    </div>

    <div class="page-container">
        <div class="guilloche-border">
            <div class="guilloche-inner">
                <div class="content-layer">
                    
                    <svg class="watermark" viewBox="0 0 100 100" fill="currentColor">
                        <path d="M50 10 L90 90 H10 Z" stroke="currentColor" stroke-width="2" fill="none" />
                    </svg>

                    <div class="header-section border-b-2 border-double border-gray-400 pb-2 mb-2 flex justify-between items-center text-center">
                        <div class="w-1/4"></div> <div class="w-2/4">
                            <h4 class="font-bold text-sm">الحكومة الليبية - وزارة الاقتصاد</h4>
                            <div class="my-1 flex justify-center">
                                <div class="border-2 border-black p-1 w-10 h-10 flex items-center justify-center rounded">
                                    <span class="font-bold text-xs">PIB</span>
                                </div>
                            </div>
                            <h2 class="font-bold text-lg">الهيئة العامة لتشجيع الاستثمار<br>وشؤون الخصخصة</h2>
                            <div class="mt-1">
                                <span class="text-xs block text-gray-500">( رقم الترخيص )</span>
                                <span class="font-mono font-bold text-lg border-b border-black px-2">@Model.LicenseNumber</span>
                                <br />
                                <span class="font-mono font-bold text-lg border-b border-black px-2">@Model.Type</span>
                            </div>
                        </div>

                        <div class="w-1/4 pt-4">
                           </div>
                    </div>

                    <div class="body-section relative z-10">
                        
                        <div class="text-justify text-[11px] leading-tight space-y-1 mb-2 px-1">
                            <p>- بناء على قرار اللجنة الشعبية العامة سابقاً رقم (89) لسنة (2009م) بشأن إنشاء الهيئة العامة للتمليك والاستثمار.</p>
                            <p>- وعلى القانون رقم (9) لسنة (2010م) بشأن تشجيع الاستثمار ولائحته التنفيذية.</p>
                            <p>- وعلى قرار اللجنة الشعبية العامة للاقتصاد والتجارة سابقاً رقم (77) لسنة 2011م، بشأن اعتماد الهيكل التنظيمي للهيئة.</p>
                            <p>- و قرار وزير الاقتصاد والتجارة رقم (791) لسنة (2021م) الصادر بتاريخ (2021/12/07م)، بشأن الإذن بتنفيذ مشروع استثماري.</p>
                        </div>

                        <div class="text-center mb-2">
                            <h1 class="text-2xl font-bold inline-block border-b-2 border-black pb-1 px-6">يــرخـــــــص</h1>
                        </div>

                        <div class="details-box">
                            <div class="row-line">
                                <span class="row-label">بتنفيذ مشـروع:</span>
                                <span class="row-value">@Model.Project?.Name</span>
                            </div>
                            <div class="row-line">
                                <span class="row-label">فــي مجـــــال:</span>
                                <span class="row-value">@Model.Project?.Area</span>
                            </div>
                            <div class="row-line">
                                <span class="row-label">نــوع النشـــــــاط:</span>
                                <span class="row-value">@Model.Project?.TypeOfActivity</span>
                            </div>
                            <div class="row-line">
                                <span class="row-label">الشكل القانوني:</span>
                                <span class="row-value">شركة مساهمة ليبية</span> </div>
                            <div class="row-line">
                                <span class="row-label">الموقع الكائن:</span>
                                <span class="row-value">@Model.Project?.ProposedSite</span>
                            </div>
                        </div>

                        <div class="px-2 mt-1">
                            <h4 class="font-bold underline text-sm mb-1">مع مراعاة مايلي:</h4>
                            <ol class="list-decimal list-outside pr-4 text-[11px] space-y-1 font-bold">
                                <li>على أصحاب الترخيص عند تنفيذ وتشغيل المشروع الالتزام بالقوانين واللوائح المعمول بها في ليبيا.</li>
                                <li>لا يجوز التنازل عن هذا الترخيص للغير.</li>
                                <li>لا يجوز لأصحاب الترخيص أن يمارسوا نشاطاً غير منصوص عليه في الترخيص.</li>
                                <li>أن يتم الحصول علي الموافقات والتراخيص الفنية من الجهات ذات العلاقة.</li>
                                <li>على اصحاب المشروع التقدم لتجديد الترخيص قبل شهر من تاريخ انتهائه.</li>
                            </ol>
                        </div>
                        
                        <div class="mt-4 text-xs font-bold px-2">
                            <span>حرر بتاريخ: </span>
                            <span class="font-mono" dir="ltr">@Model.CreatedDate</span>
                        </div>
                    </div>

                    <div class="footer-section pt-8 pb-4"> <div class="flex justify-between items-end px-4">
                            <div class="text-center">
                                <p class="font-bold text-sm mb-8">
                                    توقيع<br>
                                    مدير إدارة الاستثمار<br>
                                    / المكلف
                                </p>
                            </div>

                            <div class="text-center">
                                <p class="font-bold text-sm mb-8">
                                    يعتمد<br>
                                    المدير العام للهيئة العامة لتشجيع<br>
                                    الاستثمار وشؤون الخصخصة
                                </p>
                            </div>
                        </div>

                        <div class="border-t border-gray-300 mt-2 pt-1 text-center">
                             <p class="text-[10px] text-gray-500 font-mono">هاتف: +218 51 262 3729</p>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>