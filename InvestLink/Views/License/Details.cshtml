@model InvestLink_BLL.Models.LicenseVM


@{
    ViewData["Title"] = "تفاصيل الترخيص";
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ترخيص تنفيذ مشروع استثماري</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Amiri:ital,wght@0,400;0,700;1,400&family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            background-color: #f3f4f6;
            font-family: 'Amiri', serif; /* Official document feel */
        }

        .paper {
            background-color: #fff;
            background-image: radial-gradient(#e5e7eb 1px, transparent 1px), radial-gradient(#e5e7eb 1px, transparent 1px);
            background-size: 20px 20px;
            background-position: 0 0, 10px 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }

        /* Intricate Border Effect */
        .guilloche-border {
            border: 2px solid #5d6d7e;
            padding: 4px;
            height: 100%;
            position: relative;
        }

        .guilloche-inner {
            border: 1px solid #5d6d7e;
            border-style: double;
            border-width: 4px;
            height: 100%;
            padding: 20px;
            position: relative;
            background: linear-gradient(45deg, transparent 48%, #9ca3af 49%, #9ca3af 51%, transparent 52%) 0 0 / 10px 10px, linear-gradient(-45deg, transparent 48%, #9ca3af 49%, #9ca3af 51%, transparent 52%) 0 0 / 10px 10px;
            background-clip: border-box;
            -webkit-background-clip: border-box;
        }

        /* Overwriting the background on the content area to keep text readable */
        .content-layer {
            background-color: rgba(255, 255, 255, 0.95);
            height: 100%;
            padding: 20px;
            position: relative;
            z-index: 10;
        }

        .watermark-logo {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0.08;
            width: 400px;
            z-index: 0;
            pointer-events: none;
        }

        .seal-stamp {
            border: 3px double #1e3a8a;
            border-radius: 50%;
            color: #1e3a8a;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            transform: rotate(-5deg);
        }

        .official-seal {
            width: 120px;
            height: 120px;
            border: 4px double #2c5282;
            border-radius: 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            font-size: 10px;
            color: #2c5282;
            font-weight: bold;
            text-align: center;
            margin: 0 auto;
            opacity: 0.8;
            background: rgba(255,255,255,0.5);
        }

        .signature-font {
            font-family: 'Satisfy', cursive; /* Fallback */
            font-style: italic;
        }

        .details-grid {
            display: grid;
            grid-template-columns: auto 1fr;
            gap: 8px 16px;
            align-items: baseline;
        }

        .bullet-list {
            list-style-type: none;
            counter-reset: css-counter 0;
        }

            .bullet-list li {
                position: relative;
                margin-bottom: 6px;
                padding-right: 20px;
            }

                .bullet-list li::before {
                    counter-increment: css-counter 1;
                    content: counter(css-counter) ".";
                    position: absolute;
                    right: 0;
                    font-weight: bold;
                }




        .no-print {
            display: none;
        }

        .paper {
            box-shadow: none;
            margin: 0;
            width: 100%;
            height: 100%;
        }

        }
    </style>
</head>
<body class="py-8 flex justify-center min-h-screen">

    <!-- Controls -->
    <div class="fixed top-4 left-4 flex gap-2 no-print z-50">
       
        <button id="printScheduleBtn" class="mt-2 btn btn-outline-primary">
            <i class="material-icons">print</i>
            طباعة الجدول
        </button>
    </div>


    <!-- Document Container (A4 ish) -->
    <div class="paper w-[210mm] min-h-[297mm] mx-auto text-gray-900 leading-relaxed text-right relative">

        <div class="guilloche-border">
            <div class="guilloche-inner">
                <div class="content-layer">

                    <!-- Watermark -->
                    <svg class="watermark-logo" viewBox="0 0 100 100" fill="currentColor">
                        <path d="M50 10 L90 90 H10 Z" stroke="currentColor" stroke-width="2" fill="none" />
                        <text x="50" y="60" text-anchor="middle" font-size="10" font-weight="bold">P.I.B</text>
                    </svg>

                    <!-- Header -->
                    <div class="flex justify-between items-start mb-6 border-b-2 border-double border-gray-300 pb-4">

                        <!-- Right Side: Circular Stamp -->
                        <div class="w-1/4 flex flex-col items-center">
                            <div class="w-32 h-32 border-4 border-double border-gray-400 rounded-full flex flex-col items-center
                            justify-center p-2 text-center text-sm text-gray-600 rotate-[-5deg] opacity-80">
                                <span class="font-bold block text-base">ترخيص تنفيذ</span>
                                <span class="block">مشروع</span>
                                <span class="block">استثماري</span>
                            </div>
                        </div>

                        <!-- Center: Ministry & Logo -->
                        <div class="w-2/4 text-center">
                            <h1 class="text-xl font-bold mb-1">الحكومة الليبية - وزارة الاقتصاد</h1>

                            <!-- Logo Placeholder -->
                            <div class="flex justify-center my-2">
                                <div class="relative w-16 h-16 border-2 border-black flex items-center justify-center rounded-lg">
                                    <svg viewBox="0 0 50 50" class="w-10 h-10">
                                        <path d="M25 5 L45 45 H5 Z" fill="none" stroke="black" stroke-width="3" />
                                        <circle cx="25" cy="30" r="5" fill="black" />
                                    </svg>
                                </div>
                            </div>
                            <div class="font-bold text-lg">P . I . B</div>
                            <h2 class="text-xl font-bold mt-1">الهيئة العامة لتشجيع</h2>
                            <h2 class="text-xl font-bold">الاستثمار وشؤون الخصخصة</h2>
                            <div class="text-sm mt-1 text-gray-600">( رقم الترخيص )</div>
                            @*                             @Model.LicenseNumber
 *@                            <div class="font-mono text-lg font-bold border-b inline-block px-4">@Model.LicenseNumber</div>
                        </div>

                        <!-- Left Side: Serial Number -->
                        <div class="w-1/4 flex flex-col items-end">
                           
                            <div class="mt-4 w-full flex justify-center">
                             
                            </div>
                        </div>
                    </div>

                    <!-- Preamble / Legal References -->
                    <div class="text-xs text-justify mb-6 space-y-1 text-gray-700 px-4">
                        <p>- بناء على قرار اللجنة الشعبية العامة سابقاً رقم (89) لسنة (2009م) بشأن إنشاء الهيئة العامة للتمليك والاستثمار.</p>
                        <p>- وعلى القانون رقم (9) لسنة (2010م) بشأن تشجيع الاستثمار ولائحته التنفيذية.</p>
                        <p>- وعلى قرار اللجنة الشعبية العامة للاقتصاد والتجارة سابقاً رقم (77) لسنة 2011م، بشأن اعتماد الهيكل التنظيمي للهيئة.</p>
                        <p>- وعلى قرار مجلس الوزراء رقم (564) لسنة 2012م، بشأن تعديل القرار رقم (89) لسنة 2009م، بشأن تسمية الهيئة العامة لتشجيع الاستثمار وشؤون الخصخصة.</p>
                        <p>- و قرار وزير الاقتصاد والتجارة رقم (791) لسنة (2021م) الصادر بتاريخ (2021/12/07م)، بشأن الإذن بتنفيذ مشروع استثماري.</p>
                        <p>- وعلى قرار مجلس الوزراء رقم (354) لسنة 2024م، بشأن إعادة تشكيل مجلس إدارة الهيئة العامة لتشجيع الاستثمار وشؤون الخصخصة المؤرخ في (2024/09/04م).</p>
                        <p>- وعلى الترخيص التنفيذ الممنوح خلال الفترة 2022/10/18 إلى 2024/06/05م.</p>
                    </div>

                    <!-- Granting Section -->
                    <div class="text-center py-2 mb-4">
                        <h2 class="text-3xl font-bold inline-block border-b-2 border-black pb-1 px-8">يــرخـــــــص</h2>
                    </div>

                    <!-- Project Details -->
                    <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 mb-6 text-base shadow-sm relative overflow-hidden">
                        <div class="absolute top-0 right-0 w-20 h-20 bg-blue-100 rounded-bl-full -mr-10 -mt-10 opacity-50"></div>

                        <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 mb-6 text-base shadow-sm relative overflow-hidden">
                            <div class="absolute top-0 right-0 w-20 h-20 bg-blue-100 rounded-bl-full -mr-10 -mt-10 opacity-50"></div>
                            <div class="col-md-6">
                                <label class="form-label">اسم المشروع</label>
                                <input type="text" value="@Model.Project?.Name" class="form-control" readonly>
                            </div>

                            <div class="grid grid-cols-1 gap-y-3 relative z-10">
                                <div class="details-grid">
                                    <label class="form-label">بتنفيذ مشـروع: </label>
                                    <input type="text" value="@Model.Project?.TypeOfActivity" class="form-control" readonly>
                                </div>


                              <div class="details-grid">
                                <label class="form-label"> فــي مجـــــال: </label>
                                    <input type="text" value="@Model.Project?.Area" class="form-control" readonly>

                            </div>


                            <div class="details-grid">
                                <label class="form-label"> نــوع النشـــــــاط : </label>
                                    <input type="text" value="@Model.Project?.TypeOfActivity" class="form-control" readonly>

                            </div> 
 
                            </div>
                        </div> 

                    <!-- Conditions -->
                    <div class="mb-8 px-4">
                        <h4 class="font-bold mb-2 underline">مع مراعاة مايلي :</h4>
                        <ol class="bullet-list text-sm space-y-1 text-gray-800">
                            <li>على أصحاب الترخيص عند تنفيذ وتشغيل المشروع الالتزام بالقوانين واللوائح المعمول بها في ليبيا.</li>
                            <li>لا يجوز التنازل عن هذا الترخيص للغير.</li>
                            <li>لا يجوز لأصحاب الترخيص أن يمارسوا نشاطاً غير منصوص عليه في الترخيص ولا يجوز إجراء أي تعديل إلا بعد موافقة الهيئة.</li>
                            <li>أن يتم الحصول علي الموافقات والتراخيص الفنية من الجهات ذات العلاقة.</li>
                            <li>على اصحاب الترخيص عدم تغيير موقع نشاطهم إلا بعد موافقة الهيئة.</li>
                            <li>على اصحاب المشروع التقدم لتجديد الترخيص قبل شهر من تاريخ انتهائه.</li>
                        </ol>
                        <div class="mt-2 font-bold text-sm">
                            <span> حرر بتاريخ </span>
                            <span class="font-mono"> @Model.CreatedDate</span>
                        </div>
                        </div>

                            @* <span> ميلادي .</span> *@
                        </div>
            

                    <!-- Footer Signatures -->
                    <div class="flex justify-between items-end mt-8 px-8 relative">

                        <!-- Right Signature -->
                        <div class="text-center w-1/3 relative z-10">
                            <p class="font-bold mb-8">يعتمد<br>المدير العام للهيئة العامة لتشجيع<br>الاستثمار وشؤون الخصخصة</p>

                            <!-- Stamp Overlay -->
                            <div class="absolute top-10 left-1/2 transform -translate-x-1/2 opacity-80 mix-blend-multiply">
                                <div class="official-seal border-blue-800 text-blue-900">
                                    <div class="text-[8px] mb-1">الدولة الليبية</div>
                                    <div class="text-[10px] font-bold">الهيئة العامة</div>
                                    <div class="text-[8px] mt-1">الاستثمار</div>
                                    <svg class="w-8 h-8 mt-1 opacity-50" viewBox="0 0 24 24" fill="currentColor"><path d="M12 2L2 22h20L12 2zm0 4l6 14H6l6-14z" /></svg>
                                </div>
                            </div>

                            <!-- Signature scribble -->
                            @* <svg width="100" height="50" class="mx-auto mt-[-40px] relative z-20" viewBox="0 0 100 50">
                                <path d="M10,25 Q30,5 50,25 T90,25" stroke="darkblue" stroke-width="2" fill="none" />
                            </svg> *@
                        </div>

                     
                    </div>

                    <!-- Bottom Address -->
                    <div class="absolute bottom-0 left-0 right-0 p-4 text-center border-t border-gray-300 mt-4 text-xs text-gray-500 bg-white/90">
                        <div class="flex justify-between items-center px-4">
                            <span class="flex items-center gap-1">
                                +218 51 262 3729
                            </span>
                            <span class="flex items-center gap-1">
                                
                        </div>
                    </div>

                </div>
            </div>
        </div>
  

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</body>
</html>



<script>
  
        $(document).ready(function () {
      document.getElementById("printScheduleBtn").addEventListener("click", function () {
        var printContents = document.querySelector(".print").outerHTML;
        var originalContents = document.body.innerHTML;

        document.body.innerHTML = printContents;
        window.print();
        document.body.innerHTML = originalContents;
        window.location.reload();
      });
    });
    </script>