@model IEnumerable<InvestLink_BLL.Models.LicenseVM>
@{
    ViewBag.Title = "Expiredlicenses";
}



<h6 class="mb-0 text-uppercase"></h6>
<hr>
<div class="card">
    <div class="card-body">
        <table class="table mb-0 table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">رقم الترخيص</th>
                    <th scope="col">اسم المشروع</th>
                    <th scope="col">حالة رخصه</th>
                    <th scope="col">تعيين موظف للمتابعه</th>
                </tr>
            </thead>


            <tbody>
                @{
                    int Count = 0;
                }
                @foreach (var Item in Model)
                {
                    Count++;
                   <tr>
                        <th scope="row">@Count</th>
                        <td>@Item.LicenseNumber</td>
                        <td>@Item.Project?.Name</td>

                        <td class="align-middle text-center">
                            <span class="badge bg-danger text-white py-2 px-3 rounded-3 shadow-sm"
                                  style="min-width: 100px; font-size: 0.9rem; font-weight: normal;">
                                منتهية
                            </span>
                        </td>

                        <td>


                            <form asp-controller="License" asp-action="SendReportRequest" method="post" class="form-inline" autocomplete="off">

                                <input type="hidden" name="licenseId" value="@Item.Id" />

                                <div class="form-group" style="display:inline-block; margin-bottom:0;">
                                    <select name="EmployeeId" class="form-control input-sm" asp-items=" ViewBag.EmployeesList" required>
                                        <option value="">اختر موظف..</option>
                                    </select>
                                </div>

                                <button type="submit" class="btn btn-info waves-effect" " onclick="this.style.display='none';">
                                    <i class="material-icons">send</i>
                                </button>
                                <span id="loading" style="display:none;" class="text-muted">جاري الطلب...</span>
                            </form>
                        </td>
                </tr>
                    
                }
            </tbody>
        </table>
    </div>
</div>

