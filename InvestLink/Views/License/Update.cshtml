@model InvestLink_BLL.Models.LicenseVM

@{
    ViewData["Title"] = " الترخيص";
    // Layout = null; لجعل الصفحة تأخذ الشاشة كاملة للطباعة بدون الهيدر والفوتر الخاص بالموقع
}

 <!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> 
 <title>ترخيص تنفيذ مشروع استثماري - @Model.LicenseNumber</title> 
    <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Amiri:ital,wght@0,400;0,700;1,400&family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
   <style>
        body {
            background-color: #f3f4f6;
            font-family: 'Amiri', serif;
        }

        .paper {
            background-color: #fff;
            background-image: radial-gradient(#e5e7eb 1px, transparent 1px), radial-gradient(#e5e7eb 1px, transparent 1px);
            background-size: 20px 20px;
            background-position: 0 0, 10px 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            position: relative;
            overflow: hidden;
        }

        .guilloche-border {
            border: 2px solid #5d6d7e;
            padding: 4px;
            height: 100%;
            position: relative;
        }

        .guilloche-inner {
            border: 1px solid #5d6d7e;
            border-style: double;
            border-width: 4px;
            height: 100%;
            padding: 20px;
            position: relative;
            background: linear-gradient(45deg, transparent 48%, #9ca3af 49%, #9ca3af 51%, transparent 52%) 0 0 / 10px 10px, linear-gradient(-45deg, transparent 48%, #9ca3af 49%, #9ca3af 51%, transparent 52%) 0 0 / 10px 10px;
        }

        .content-layer {
            background-color: rgba(255, 255, 255, 0.95);
            height: 100%;
            padding: 20px;
            position: relative;
            z-index: 10;
        }

        .watermark-logo {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            opacity: 0.08;
            width: 400px;
            z-index: 0;
            pointer-events: none;
        }

        .official-seal {
            width: 120px;
            height: 120px;
            border: 4px double #2c5282;
            border-radius: 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            font-size: 10px;
            color: #2c5282;
            font-weight: bold;
            text-align: center;
            margin: 0 auto;
            opacity: 0.8;
            background: rgba(255,255,255,0.5);
        }

        .details-grid {
            display: grid;
            grid-template-columns: auto 1fr;
            gap: 8px 16px;
            align-items: baseline;
            margin-bottom: 10px;
        }

        /* تنسيق خاص للحقول لتظهر كأنها مكتوبة وليست مدخلات */
        .data-display {
            border: none;
            border-bottom: 1px dashed #9ca3af;
            background: transparent;
            font-family: 'Cairo', sans-serif;
            font-weight: 700;
            color: #1f2937;
            width: 100%;
            padding: 0 10px;
            font-size: 1.1rem;
        }

            .data-display:focus {
                outline: none;
                border-bottom: 1px solid #1e3a8a;
            }

        .bullet-list {
            list-style-type: none;
            counter-reset: css-counter 0;
        }

            .bullet-list li {
                position: relative;
                margin-bottom: 6px;
                padding-right: 20px;
            }

                .bullet-list li::before {
                    counter-increment: css-counter 1;
                    content: counter(css-counter) ".";
                    position: absolute;
                    right: 0;
                    font-weight: bold;
                }

       media print {
            .no-print

        {
            display: none !important;
        } */

        body {
            background: none;
        }

        .paper {
            box-shadow: none;
            margin: 0;
            width: 100%;
            height: 100%;
            -webkit-print-color-adjust: exact;
        }

        }
    </style> 

</head>
<body class="py-8 flex justify-center min-h-screen">

    <!-- Controls -->
    <div class="fixed top-4 left-4 flex gap-2 no-print z-50">
        <button onclick="window.print()" class="bg-blue-600 text-white px-4 py-2 rounded shadow hover:bg-blue-700 transition flex items-center gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" />
            </svg>
            طباعة / PDF
        </button>
        <a asp-controller="Home" asp-action="Index" class="bg-gray-600 text-white px-4 py-2 rounded shadow hover:bg-gray-700 transition">رجوع</a>
    </div>
   
    <!-- Document Container -->
    <div class="paper w-[210mm] min-h-[297mm] mx-auto text-gray-900 leading-relaxed text-right relative">

        <div class="guilloche-border">
            <div class="guilloche-inner">
                <div class="content-layer">

                    <!-- Watermark -->
                    <svg class="watermark-logo" viewBox="0 0 100 100" fill="currentColor">
                        <path d="M50 10 L90 90 H10 Z" stroke="currentColor" stroke-width="2" fill="none" />
                        <text x="50" y="60" text-anchor="middle" font-size="10" font-weight="bold">P.I.B</text>
                    </svg>

                    <!-- Header -->
                    <div class="flex justify-between items-start mb-6 border-b-2 border-double border-gray-300 pb-4">
                        <!-- Right Side -->
                        <div class="w-1/4 flex flex-col items-center">
                            <div class="w-32 h-32 border-4 border-double border-gray-400 rounded-full flex flex-col items-center justify-center p-2 text-center text-sm text-gray-600 rotate-[-5deg] opacity-80">
                                <span class="font-bold block text-base">ترخيص تنفيذ</span>
                                <span class="block">مشروع</span>
                                <span class="block">استثماري</span>
                            </div>
                        </div>

                        <!-- Center -->
                        <div class="w-2/4 text-center">
                            <h1 class="text-xl font-bold mb-1">الحكومة الليبية - وزارة الاقتصاد</h1>
                            <div class="flex justify-center my-2">
                                <div class="relative w-16 h-16 border-2 border-black flex items-center justify-center rounded-lg">
                                    <h1 class="font-bold text-2xl">شعار</h1>
                                </div>
                            </div>
                            <div class="font-bold text-lg">P . I . B</div>
                            <h2 class="text-xl font-bold mt-1">الهيئة العامة لتشجيع</h2>
                            <h2 class="text-xl font-bold">الاستثمار وشؤون الخصخصة</h2>

                            <!-- رقم الترخيص من قاعدة البيانات -->
                            <div class="text-sm mt-1 text-gray-600">( رقم الترخيص )</div>
                            <div class="font-mono text-lg font-bold border-b inline-block px-4 dir-ltr">
                                @Model.LicenseNumber
                            </div>
                        </div>

                        <!-- Left Side: Serial Number -->
                        <div class="w-1/4 flex flex-col items-end">
                            <div class="border border-gray-400 p-2 rounded text-center min-w-[120px]">
                                <span class="block text-xs text-gray-500 mb-1">رقم مرجعي</span>
                                <!-- يمكن استخدام معرف الرخصة كرقم تسلسلي -->
                                <span class="block text-red-700 font-mono text-xl tracking-widest font-bold">@Model.Id.ToString("D7")</span>
                            </div>
                        </div>
                    </div>

                    <!-- Preamble -->
                    <div class="text-xs text-justify mb-6 space-y-1 text-gray-700 px-4">
                        <p>- بناء على قرار اللجنة الشعبية العامة سابقاً رقم (89) لسنة (2009م) بشأن إنشاء الهيئة العامة للتمليك والاستثمار.</p>
                        <p>- وعلى القانون رقم (9) لسنة (2010م) بشأن تشجيع الاستثمار ولائحته التنفيذية.</p>
                        <p>- و قرار وزير الاقتصاد والتجارة رقم (791) لسنة (2021م) الصادر بتاريخ (2021/12/07م)، بشأن الإذن بتنفيذ مشروع استثماري.</p>
                    </div>

                    <!-- Granting Section -->
                    <div class="text-center py-2 mb-4">
                        <h2 class="text-3xl font-bold inline-block border-b-2 border-black pb-1 px-8">يــرخـــــــص</h2>
                    </div>

                    <!-- Project Details Block -->
                    <div class="bg-gray-50 p-6 rounded-lg border border-gray-200 mb-6 text-base shadow-sm relative overflow-hidden">
                        <div class="absolute top-0 right-0 w-20 h-20 bg-blue-100 rounded-bl-full -mr-10 -mt-10 opacity-50"></div>

                        <!-- هنا يتم ربط البيانات -->
                        <div class="grid grid-cols-1 gap-y-3 relative z-10">

                            <!-- 1. اسم المشروع -->
                            <div class="details-grid">
                                <label class="form-label font-bold w-32">بتنفيذ مشـروع: </label>
                                <input type="text" asp-for="@Model.Project.Name" class="data-display" readonly>
                            </div>

                            <!-- 2. المجال -->
                            <div class="details-grid">
                                <label class="form-label font-bold w-32"> فــي مجـــــال: </label>
                                <input type="text" asp-for="@Model.Project.Area" class="data-display" readonly>
                            </div>

                            <!-- 3. نوع النشاط -->
                            <div class="details-grid">
                                <label class="form-label font-bold w-32"> نــوع النشـــــــاط: </label>
                                <input type="text" asp-for="@Model.Project.TypeOfActivity" class="data-display" readonly>
                            </div>

                            <!-- 4. الموقع -->
                            <div class="details-grid">
                                <label class="form-label font-bold w-32"> المـوقع الكـائن: </label>
                                <input type="text" asp-for="@Model.Project.ProposedSite" class="data-display" readonly>
                            </div>

                            <!-- 5. الشكل القانوني -->
                            <div class="details-grid">
                                <label class="form-label font-bold w-32"> الشكل القانـوني: </label>
                                <!-- ملاحظة: إذا لم يكن هناك حقل منفصل، استخدمنا LegalBodyName -->
                                <input type="text" asp-for="@(Model.Project.LegalBodyName ?? "شركة مساهمة")" class="data-display" readonly>
                            </div>

                            <!-- 6. اسم الشركة (الجهة المالكة) -->
                            <div class="details-grid">
                                <label class="form-label font-bold w-32"> اسم الشــركــة: </label>
                                <input type="text" asp-for="@Model.Project.LegalBodyName" class="data-display" readonly>
                            </div>
                        </div>
                    </div>

                    <!-- Validity Dates -->
                    <div class="mb-6 px-4">
                        <p class="text-justify font-semibold leading-loose">
                            يسري هذا الترخيص اعتباراً من تاريخ
                            <!-- تاريخ الإصدار -->
                            <span class="font-mono bg-yellow-50 px-2 border-b">@Model.CreatedDate.ToString("yyyy/MM/dd")</span>
                            إلى
                            <!-- تاريخ الانتهاء -->
                            <span class="font-mono bg-yellow-50 px-2 border-b">@Model.ExpireDate.ToString("yyyy/MM/dd")</span>
                            ، على أن تراعى أحكام القانون رقم (9) لسنة 2010م، بشأن تشجيع الاستثمار ولائحته التنفيذية.
                        </p>
                    </div>

                    <!-- Conditions -->
                    <div class="mb-8 px-4">
                        <h4 class="font-bold mb-2 underline">مع مراعاة مايلي :</h4>
                        <ol class="bullet-list text-sm space-y-1 text-gray-800">
                            <li>على أصحاب الترخيص عند تنفيذ وتشغيل المشروع الالتزام بالقوانين واللوائح المعمول بها في ليبيا.</li>
                            <li>لا يجوز التنازل عن هذا الترخيص للغير إلا بموافقة الهيئة.</li>
                            <li>على اصحاب المشروع التقدم لتجديد الترخيص قبل شهر من تاريخ انتهائه.</li>
                        </ol>
                        <div class="mt-4 font-bold text-sm">
                            <span>* حرر بتاريخ </span>
                            <span class="font-mono">@DateTime.Now.ToString("yyyy/MM/dd")</span>
                            <span> ميلادي .</span>
                        </div>
                    </div>

                    <!-- Signatures -->
                    <div class="flex justify-between items-end mt-8 px-8 relative">
                        <div class="text-center w-1/3 relative z-10">
                            <p class="font-bold mb-8">يعتمد<br>المدير العام للهيئة العامة لتشجيع<br>الاستثمار وشؤون الخصخصة</p>
                            <!-- الختم -->
                            <div class="absolute top-10 left-1/2 transform -translate-x-1/2 opacity-80 mix-blend-multiply">
                                <div class="official-seal border-blue-800 text-blue-900">
                                    <div class="text-[8px] mb-1">الدولة الليبية</div>
                                    <div class="text-[10px] font-bold">الهيئة العامة</div>
                                    <div class="text-[8px] mt-1">الاستثمار</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Footer Address -->
                    <div class="absolute bottom-0 left-0 right-0 p-4 text-center border-t border-gray-300 mt-4 text-xs text-gray-500 bg-white/90">
                        <div class="flex justify-between items-center px-4">
                            <span class="flex items-center gap-1">هاتف: +218 51 000 0000</span>
                            <span class="flex items-center gap-1">العنوان: ليبيا</span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</body>
</html>