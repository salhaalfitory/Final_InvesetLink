                                <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
                                <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>

                                <script>
                                    document.addEventListener("DOMContentLoaded", function() {
                                        // 1. تحديد إحداثيات ليبيا (مثلاً) كبداية
                                        var lat = 32.8872;
                                        var lng = 13.1913;

                                        // إذا كانت هناك قيم محفوظة (في حالة التعديل)، استخدمها
                                        var savedLat = document.getElementById('latInput').value;
                                        var savedLng = document.getElementById('lngInput').value;

                                        // التأكد أن القيم ليست صفر أو فارغة
                                        if (savedLat && savedLng && parseFloat(savedLat) !== 0) {
                                            lat = parseFloat(savedLat);
                                            lng = parseFloat(savedLng);
                                        }

                                        // 2. رسم الخريطة
                                        var map = L.map('map').setView([lat, lng], 13);

                                        // 3. تحميل الصور (Tiles)
                                        L.tileLayer('https://tile.openstreetmap.org/{z}/{x}/{y}.png', {
                                            maxZoom: 19,
                                            attribution: '&copy; <a href="http://www.openstreetmap.org/copyright">OpenStreetMap</a>'
                                        }).addTo(map);

                                        // 4. وضع الدبوس
                                        var marker = L.marker([lat, lng], { draggable: true }).addTo(map);

                                        // عند تحريك الدبوس
                                        marker.on('dragend', function (e) {
                                            var coord = marker.getLatLng();
                                            document.getElementById('latInput').value = coord.lat;
                                            document.getElementById('lngInput').value = coord.lng;
                                        });
            
                                        // عند الضغط على الخريطة
                                         map.on('click', function (e) {
                                            marker.setLatLng(e.latlng);
                                            document.getElementById('latInput').value = e.latlng.lat;
                                            document.getElementById('lngInput').value = e.latlng.lng;
                                        });
            
                                        // تحديث الحقول الأولية لضمان عدم إرسال أصفار
                                        document.getElementById('latInput').value = lat;
                                        document.getElementById('lngInput').value = lng;
                                    });
                                </script>
                            }

