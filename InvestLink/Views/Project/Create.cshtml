        // جلب البيانات من السيرفر وتخزينها في متغير جافاسكربت
        var nationalityList = @Html.Raw(Json.Serialize(ViewBag.NationalityList));

        function addBootstrapInvestor() {
            const container = document.getElementById('investors-container');

            // تحضير خيارات الجنسية (HTML Options)
            let nationalityOptions = '<option value=""> اختر الجنسية</option>';
            if (nationalityList) {
                nationalityList.forEach(function(item) {
                    // item.value هو معرف الجنسية، item.text هو اسم الدولة
                    nationalityOptions += `<option value="${item.value}">${item.text}</option>`;
                });
            }

            const cardDiv = document.createElement('div');
            cardDiv.className = 'card mb-3 border shadow-sm investor-item';

            cardDiv.innerHTML = `
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="card-title m-0 text-primary fw-bold"> بيانات الشريك / المستثمر الإضافي</h6>
                        <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeInvestor(this)">
                            <i class='bx bx-trash'></i> حذف
                        </button>
                    </div>

                    <div class="row g-3">
                        <div class="col-12 col-lg-6">
                            <label class="form-label">أسم المستثمر</label>
                            <input type="text" class="form-control field-name" placeholder="الاسم الثلاثي" required>
                        </div>

                        <div class="col-12 col-lg-6">
                            <label class="form-label">الصفة</label>
                            <input type="text" class="form-control field-position" placeholder="مثال: شريك، عضو مجلس إدارة...">
                        </div>

                        <div class="col-12 col-lg-6">
                             <label class="form-label">الجنسية</label>
                             <select class="form-select field-nationality">
                                 ${nationalityOptions}
                             </select>
                        </div>

                        <div class="col-12 col-lg-6">
                            <label class="form-label">رقم البطاقة أو جواز السفر</label>
                            <input type="text" class="form-control field-idnumber">
                        </div>

                        <div class="col-12 col-lg-6">
                            <label class="form-label">صورة البطاقة أو جواز السفر</label>
                            <input type="file" class="form-control field-file">
                        </div>

                        <div class="col-12 col-lg-6">
                            <label class="form-label">الهاتف / النقال</label>
                            <input type="text" class="form-control field-phone">
                        </div>

                        <div class="col-12 col-lg-6">
                            <label class="form-label">البريد الإلكتروني</label>
                            <input type="email" class="form-control field-email">
                        </div>
                    </div>
                </div>
            `;

            container.appendChild(cardDiv);
            reindexInvestors();
        }

        // ... بقية دوال الحذف وإعادة الترتيب كما هي
        function removeInvestor(btn) {
            btn.closest('.investor-item').remove();
            reindexInvestors();
        }

        function reindexInvestors() {
            const items = document.querySelectorAll('.investor-item');
            items.forEach((item, index) => {
                const newIndex = index + 1;

                item.querySelector('.card-title').innerText = `بيانات الشريك / المستثمر الإضافي (${newIndex})`;

                if(item.querySelector('.field-name')) item.querySelector('.field-name').name = `Investors[${newIndex}].Name`;
                if(item.querySelector('.field-position')) item.querySelector('.field-position').name = `Investors[${newIndex}].Position`;

                // تصحيح: البحث عن الكلاس الصحيح للجنسية
                if(item.querySelector('.field-nationality')) item.querySelector('.field-nationality').name = `Investors[${newIndex}].NationalityId`;

                if(item.querySelector('.field-idnumber')) item.querySelector('.field-idnumber').name = `Investors[${newIndex}].IDNumber`;
                if(item.querySelector('.field-file')) item.querySelector('.field-file').name = `Investors[${newIndex}].Image`;
                if(item.querySelector('.field-phone')) item.querySelector('.field-phone').name = `Investors[${newIndex}].PhoneNumber`;
                if(item.querySelector('.field-email')) item.querySelector('.field-email').name = `Investors[${newIndex}].Email`;
            });
        }
