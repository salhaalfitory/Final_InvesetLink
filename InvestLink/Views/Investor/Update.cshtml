
@using InvestLink_BLL.Models
@using InvestLink_DAL.Entities
@model InvestLink_BLL.Models.InvestorVM

@* //--------------------------------- *@
@using InvestLink_BLL.Interfaces
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> signInManager

@inject IInvestor investor;
@{
    ViewBag.Title = "Update";
}
@{
    @inject ICoordinatorReport icoordinatorReport;
    @inject IEmployee iEmployee;
    @inject IProjectCoordinator iProjectcoordinator;

    var user = await signInManager.UserManager.GetUserAsync(signInManager.Context.User);
    var email = await signInManager.UserManager.GetEmailAsync(user);
    var InvestorId = investor.GetIdByEmail(email);
}






        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="card radius-10">
                    <div class="card-body">
               
                        <form asp-controller="Investor" asp-action="Update" method="post" enctype="multipart/form-data" id="applicationForm">

                            <input type="hidden" asp-for="Id" value="@InvestorId" />
                            <h5 class="mb-3">تعديل بيانات حساب</h5>

                            <h5 class="mb-0 mt-4">معلومات المستثمر</h5>
                            <hr>
                            <div class="row g-3">
                                <div class="col-6">

                                    <label class="form-label">اسم المستثمر</label>
                                    <input type="text" asp-for="Name" class="form-control">
                                    <span asp-validation-for="Name" class="text-danger"></span>

                                </div>

                                <div class="col-6">

                                    <label class="form-label">البريد الإلكتروني</label>
                                    <input type="Email" asp-for="Email" class="form-control" value="@email" readonly>
                                    <span asp-validation-for="Email" class="text-danger"></span>


                                </div>


                                <div class="col-6">

                                    <label asp-for="PhoneNumber" class="form-label">الهاتف / النقال</label>
                                    <input type="tel" class="form-control" asp-for="PhoneNumber">

                                </div>

                                <div class="col-6">

                                    <label asp-for="SecondPhoneNumber" class="form-label"> الهاتف / النقال "الثاني"</label>
                                    <input type="tel" class="form-control" asp-for="SecondPhoneNumber">

                                </div>
                            </div>
                            <div class="row g-3">
                                <div class="col-6">

                                    <label asp-for="Position" class="form-label">الصفة </label>
                                    <input type="text" class="form-control" asp-for="Position">

                                </div>

                                <div class="col-6">

                                    <label asp-for=" PassportNumber" class="form-label">رقم جواز سفر</label>
                                    <input type="text" class="form-control" asp-for=" PassportNumber">

                                </div>

                        <div class="col-12">
                            <label asp-for="PImage" class="form-label">صورة المرفق</label>

                            @if (Model != null && !string.IsNullOrEmpty(Model.PassportName))
                            {
                                <div class="mb-3 p-2 border rounded bg-light">
                                    <p class="text-muted small mb-1">الملف الحالي:</p>

                                    <a href="@Url.Content("~/Files/Doc/" + Model.PassportName)" target="_blank" class="btn btn-sm btn-info text-white">
                                        <i class='bx bx-show'></i> عرض الملف الحالي
                                    </a>

                                    <input type="hidden" asp-for="PassportName" value="@Model.PassportName" />
                                </div>
                            }

                            <div class="mt-2">
                                <input asp-for="PImage" class="form-control" type="file" />
                                <span class="text-muted small">اترك هذا الحقل فارغاً إذا كنت لا تريد تغيير الصورة.</span>
                                <span asp-validation-for="PImage" class="text-danger"></span>
                            </div>
                        </div>

                                <div class="col-6">

                                    <label asp-for="CaredNumber" class="form-label">رقم بطاقة شخصية </label>
                                    <input type="text" class="form-control" asp-for="CaredNumber">

                                </div>
               
                        <div class="col-12">
                            <label asp-for="PImage" class="form-label">صورة المرفق</label>

                            @if (Model != null && !string.IsNullOrEmpty(Model.CaredName))
                            {
                                <div class="mb-3 p-2 border rounded bg-light">
                                    <p class="text-muted small mb-1">الملف الحالي:</p>

                                    <a href="@Url.Content("~/Files/Doc/" + Model.CaredName)" target="_blank" class="btn btn-sm btn-info text-white">
                                        <i class='bx bx-show'></i> عرض الملف الحالي
                                    </a>

                                    <input type="hidden" asp-for="CaredName" value="@Model.CaredName" />
                                </div>
                            }

                            <div class="mt-2">
                                <input asp-for="CImage" class="form-control" type="file" />
                                <span class="text-muted small">اترك هذا الحقل فارغاً إذا كنت لا تريد تغيير الصورة.</span>
                                <span asp-validation-for="CImage" class="text-danger"></span>
                            </div>
                        </div>

                                <div class="col-6">
                            <label asp-for="NationalityId" class="form-label">الجنسية</label>
                                    <select class="form-select mb-3" asp-for="NationalityId" asp-items="(SelectList)ViewBag.NationalityList">
                                        <option value=""> اختر  الجنسية</option>
                                    </select>
                                    <span asp-validation-for="NationalityId" class="text-danger"></span>

                                </div>

                            </div>

                            <div class="text-start mt-3">
                                <button type="submit" class="btn btn-success waves-effect">حفظ التغييرات</button>
                            </div>
                        </form>
                    </div>

                </div>
            </div>
        </div>

