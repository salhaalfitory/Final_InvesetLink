                            <button type="submit" class="btn btn-danger px-4">
                                <i class="fa fa-times"></i> رفض الطلب
                            </button>
                        </form> *@


                        
                        @* <form asp-controller="Project" asp-action="Reject" asp-route-Id="@Model.Project.Id" class="d-inline">
                      
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="fa fa-times"></i> رفض نهائي
                            </button>
                        </form> *@

                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>