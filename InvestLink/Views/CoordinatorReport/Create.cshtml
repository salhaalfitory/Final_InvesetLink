@using InvestLink_BLL.Interfaces
@using Microsoft.AspNetCore.Identity
@model InvestLink_BLL.Models.CoordinatorReportVM

@inject SignInManager<IdentityUser> signInManager

@inject ICoordinatorReport icoordinatorReport;

@inject IEmployee iEmployee;
@inject IProjectCoordinator iProjectcoordinator;



@{
    ViewBag.Title = "Create";
}
@{

    var user = await signInManager.UserManager.GetUserAsync(signInManager.Context.User);
    var email = await signInManager.UserManager.GetEmailAsync(user);
    var employeeId = iEmployee.GetIdByEmail(email);
    var x = 0;
}

<div class="card">
    <div class="card-body">
        <div class="border p-3 rounded">
            <h6 class="mb-0 text-uppercase">إضافة تقرير جديد</h6>
            <hr>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <form asp-controller="CoordinatorReport" asp-action="Create" enctype="multipart/form-data" class="row g-3">
                <input type="hidden" asp-for="ProjectCoordinatorId" />
                <input type="hidden" asp-for="employeeId" value="@employeeId" />
                <h1>@employeeId</h1>
                <div class="col-12 col-lg-6">
                    <select class="form-select mb-3" asp-for="projectId" >
                        @foreach(var pc in await iProjectcoordinator.GetAllAsync(employeeId))
                        {
                            <option value="@pc.ProjectId"> @pc.ProjectId </option>
                        }

                      
                    </select>
                </div>
              
                <div class="col-12">
                    <label asp-for="Description" class="form-label">الوصف</label>
                    <textarea asp-for="Description" class="form-control" ></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Image" class="form-label">صورة</label>
                    <input asp-for="Image" class="form-control" type="file" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>

                
                

                <div class="col-12">
                    <div class="d-flex justify-content-center gap-2 mt-3">
                        <input type="submit" value="حفظ" class="btn btn-success px-4" />


                        <a asp-action="Index" class="btn btn-secondary btn-sm px-4">الرجوع </a>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


