@model IEnumerable<InvestLink_BLL.Models.EmployeeVM>


@{
    ViewBag.Title = "Index ";
}


<a asp-controller="Employee" asp-action="Create" class="btn btn-info waves-effect">
    <i class="material-icons">create</i>
    <span>Create</span>
</a>

<h6 class="mb-0 text-uppercase">الموظفين </h6>
<hr>
<div class="card">
    <div class="card-body">
        <table class="table mb-0 table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">اسم</th>
                    <th scope="col"> البريد الالكتروني</th>
               
                </tr>
            </thead>
            <tbody>
                @{
                    int Count = 0;
                }
                @foreach (var Item in Model)
                {
                    Count++;
                    <tr>
                        <th scope="row">@Count</th>

                        <td>@Item.Name</td>
                        <td>@Item.Email</td>
                       

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>