@model InvestLink_BLL.Models.EmployeeVM

@{
    ViewBag.Title = "Create Employee";
}

<div class="card">
    <div class="card-body">
        <div class="border p-3 rounded">
            <h6 class="mb-0 text-uppercase">إضافة موظف جديد</h6>
            <hr>

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <form asp-action="Create" class="row g-3">

                <div class="col-12">
                    <label asp-for="Name" class="form-label">الاسم</label>
                    <input asp-for="Name" class="form-control" placeholder="أدخل اسم المستثمر" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="Emial" class="form-label">البريد الإلكتروني</label>
                    <input asp-for="Emial" class="form-control" type="email" placeholder="example@mail.com" />
                    <span asp-validation-for="Emial" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label">رقم الهاتف الأساسي</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="09xxxxxxxx" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="SecondPhoneNumber" class="form-label">رقم الهاتف الثانوي (اختياري)</label>
                    <input asp-for="SecondPhoneNumber" class="form-control" placeholder="09xxxxxxxx" />
                    <span asp-validation-for="SecondPhoneNumber" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <label asp-for="NationalityId" class="form-label">الجنسية</label>
                    <select asp-for="NationalityId" class="form-select" asp-items="ViewBag.NationalityId">
                        <option value="">-- اختر الجنسية --</option>
                    </select>
                    <span asp-validation-for="NationalityId" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <div class="form-check">
                        <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                        <label asp-for="IsActive" class="form-check-label">
                            تفعيل الحساب (Active)
                        </label>
                    </div>
                </div>

                <div class="col-12">
                    <div class="d-flex justify-content-center gap-2 mt-3">

                        <button type="submit" class="btn btn-success btn-sm px-4">حفظ البيانات</button>

                        <a asp-action="Index" class="btn btn-secondary btn-sm px-4">الرجوع للقائمة</a>

                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


}