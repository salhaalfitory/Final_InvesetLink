@model InvestLink_BLL.Models.AdvertisementVM

@using InvestLink_BLL.Models
@using InvestLink_DAL.Entities

@* //--------------------------------- *@
@using InvestLink_BLL.Interfaces
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> signInManager
@inject IEmployee iEmployee;
@{
    ViewBag.Title = "Create";
}

@{
    var user = await signInManager.UserManager.GetUserAsync(signInManager.Context.User);
    var email = await signInManager.UserManager.GetEmailAsync(user);
    var iEmployeeId = iEmployee.GetIdByEmail(email);

}



<div asp-validation-summary="All"></div>

<div class="card">
    <div class="card-body">
        <div class="border p-3 rounded">
            <h6 class="mb-0 text-uppercase">إنشاء إعلان</h6>
            <hr>
            <form asp-controller="Advertisement" asp-action="Create" enctype="multipart/form-data" class="row g-3">

                <input type="hidden" asp-for="EmployeeId" value="1" />

                <div class="col-12">
                    <label  class="form-label">اسم الإعلان</label>
                    <input type="text" asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <label class="form-label">صور أو ملف</label>
                    <input type="file" asp-for="Image" class="form-control">
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                
                <div class="col-12">
                    <label class="form-label">محتوى الإعلان</label>
                    <textarea class="form-control" asp-for="Description" rows="4" cols="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
               
                <div class="col-2">
                    <div class="d-grid">
                        <input type="submit" value="حفظ" class="btn btn-success">
                        <br />
     
                        <a asp-controller="Advertisement" asp-action="Index" class="btn btn-danger">رجوع</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

