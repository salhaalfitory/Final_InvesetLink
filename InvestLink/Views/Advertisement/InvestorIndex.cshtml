@model IEnumerable<InvestLink_BLL.Models.AdvertisementVM>
@{
    ViewBag.Title = "Advertisements";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="d-flex align-items-center justify-content-between mobile-column">
                <div class="d-flex align-items-center">
                    <div style="width: 60px; height: 60px; background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); border-radius: 16px; display: flex; align-items: center; justify-content: center; margin-left: 1rem; box-shadow: 0 4px 15px rgba(79, 172, 254, 0.3);">
                        <ion-icon name="megaphone-outline" style="font-size: 2rem; color: white;"></ion-icon>
                    </div>
                    <div>
                        <h2 class="gradient-text mb-1" style="font-weight: 700; font-size: 2rem;">الإعلانات والفرص الاستثمارية</h2>
                        <p class="text-secondary mb-0">اطلع على أحدث الفرص والإعلانات المتاحة</p>
                    </div>
                </div>
                
                @* <div class="mt-3 mt-md-0">
                    <div class="input-group" style="max-width: 300px;">
                        <span class="input-group-text bg-white border-end-0" style="border-radius: 0 10px 10px 0;">
                            <ion-icon name="search-outline"></ion-icon>
                        </span>
                        <input type="text" class="form-control border-start-0" placeholder="بحث في الإعلانات..." style="border-radius: 10px 0 0 10px;">
                    </div>
                </div> *@
            </div>
        </div>
    </div>

    <!-- Advertisements Grid -->
    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-xl-4 col-md-6 mb-4">
                    <div class="card h-100 hover-lift shadow-sm border-0" style="border-radius: 20px; overflow: hidden; transition: all 0.3s ease;">
                        <!-- Gradient Banner at top of card -->
                        <div style="height: 10px; background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);"></div>
                        
                        <div class="card-body p-4 d-flex flex-column">
                            <div class="d-flex align-items-start justify-content-between mb-3">
                                <div class="badge bg-light text-primary rounded-pill px-3 py-2 border border-primary border-opacity-10">
                                    <ion-icon name="information-circle-outline" style="vertical-align: middle; margin-left: 5px;"></ion-icon>
                                    إعلان جديد
                                </div>
                                <span class="text-secondary small">
                                    <ion-icon name="calendar-outline" style="vertical-align: middle;"></ion-icon>
                                    @* يمكن إضافة التاريخ هنا إذا كان متوفراً في النموذج *@
                                    الآن
                                </span>
                            </div>

                            <h4 class="card-title fw-bold mb-3 text-dark">@item.Name</h4>
                            
                            <p class="card-text text-secondary mb-4 flex-grow-1" style="line-height: 1.6;">
                                @if(!string.IsNullOrEmpty(item.Description) && item.Description.Length > 150)
                                {
                                    @item.Description.Substring(0, 150) <span>...</span>
                                }
                                else
                                {
                                    @item.Description
                                }
                            </p>

                            <div class="d-grid mt-auto">
                                <a asp-controller="Advertisement" asp-action="Details" asp-route-Id="@item.Id" class="btn btn-primary d-flex align-items-center justify-content-center gap-2" 
                                   style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); border: none; padding: 12px; border-radius: 12px; box-shadow: 0 4px 15px rgba(79, 172, 254, 0.3);">
                                    <ion-icon name="eye-outline"></ion-icon>
                                    عرض التفاصيل
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <!-- Empty State -->
        <div class="row justify-content-center">
            <div class="col-md-6 text-center py-5">
                <div class="mb-4">
                    <img src="https://cdn-icons-png.flaticon.com/512/7486/7486744.png" alt="No Ads" style="width: 150px; opacity: 0.5;">
                </div>
                <h3 class="fw-bold text-secondary">لا توجد إعلانات حالياً</h3>
                <p class="text-muted">لم يتم نشر أي إعلانات أو فرص استثمارية جديدة بعد. يرجى التحقق لاحقاً.</p>
            </div>
        </div>
    }
</div>

<style>
    .mobile-column {
        flex-direction: row;
    }
    
    @* @media (max-width: 768px) {
        .mobile-column {
            flex-direction: column;
            align-items: flex-start !important;
            gap: 1rem;
        } *@
        
        .gradient-text {
            font-size: 1.5rem !important;
        }
    }
</style>
