@model InvestLink_BLL.Models.RegestrationVM

@{
    ViewBag.Title = "Registration";
    Layout = null;
}

<!doctype html>
<html lang="ar" dir="rtl">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- CSS Files -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/bootstrap-extended.css" rel="stylesheet">
    <link href="~/css/style.css" rel="stylesheet">
    <link href="~/css/icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Custom Enhancements -->
    <link href="~/css/custom-enhancements.css" rel="stylesheet">

    <link href="~/css/Account.css" rel="stylesheet">

    <title>إنشاء حساب جديد - InvestLink</title>

  
</head>

<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-logo">
                    <ion-icon name="person-add-outline"></ion-icon>
                </div>
                <h1 class="login-title">إنشاء حساب جديد</h1>
                <p class="mb-0 text-white-50">انضم إلى منصة InvestLink</p>
            </div>

            <div class="login-body">
                <form asp-controller="Account" asp-action="Regestration" method="post">
                    <div class="mb-3">
                        <label for="inputName" class="form-label">الاسم الكامل</label>
                        <input type="text" class="form-control" asp-for="UserName" placeholder="الاسم الكامل" required>
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="inputEmail" class="form-label">البريد الإلكتروني</label>
                        <input type="email" class="form-control" asp-for="Email" placeholder="example@email.com" required>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label for="inputPassword" class="form-label">كلمة المرور</label>
                        <input type="password" class="form-control" asp-for="Password" placeholder="••••••••" minlength="5" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label for="inputConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                        <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="••••••••" minlength="5" required>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn-register">
                            <ion-icon name="checkmark-circle-outline"></ion-icon>
                            إنشاء الحساب
                        </button>
                    </div>

                    <div class="login-links">
                        <p class="mb-0">لديك حساب بالفعل؟ <a asp-controller="Account" asp-action="Login">تسجيل الدخول</a></p>
                    </div>
                </form>
            </div>
        </div>
        
        <p class="text-center mt-4" style="color: white; opacity: 0.9;">
            © 2026 InvestLink. جميع الحقوق محفوظة.
        </p>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
</body>
</html>
