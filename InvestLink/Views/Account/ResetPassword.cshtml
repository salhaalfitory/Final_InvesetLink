@model InvestLink_BLL.Models.ResetPasswordVM

@{
    ViewBag.Title = "ResetPassword";
    Layout = null;
}

<link href="~/css/Account.css" rel="stylesheet">
<!doctype html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="~/css/Account.css" rel="stylesheet">
    <title>تعيين كلمة المرور - InvestLink</title>
</head>

<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-logo-circle">
                    <ion-icon name="lock-open-outline"></ion-icon>
                </div>
                <h1 class="login-title">كلمة مرور جديدة</h1>
                <p class="login-subtitle">أدخل كلمة المرور الجديدة لحسابك</p>
            </div>

            <div class="login-body">
                <form asp-controller="Account" asp-action="ResetPassword" method="post">

                    <input type="hidden" asp-for="Email" />
                    <input type="hidden" asp-for="Token" />

                    <div asp-validation-summary="All" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">كلمة المرور الجديدة</label>
                        <input type="password" asp-for="Password" class="form-control" placeholder="******" required>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label">تأكيد كلمة المرور</label>
                        <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="******" required>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                    <input type="submit" value="تغيير كلمة المرور" class="btn-reset" />
                </form>
            </div>
        </div>
        <p class="copyright">© 2026 InvestLink. جميع الحقوق محفوظة.</p>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
</body>
</html>