@model InvestLink_BLL.Models.ForgetPasswordVM

@{
    ViewBag.Title = "استعادة كلمة المرور";
    Layout = null;
}

<!doctype html>
<html lang="ar" dir="rtl">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <title>استعادة كلمة المرور - InvestLink</title>

    <style>
        body {
            /* اللون الكحلي الملكي المعتمد */
            background-color: #1a3c6d;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Cairo', sans-serif;
            margin: 0;
        }

        .login-container {
            width: 100%;
            /* عرض عريض ليتناسب مع طلبك السابق */
            max-width: 650px;
            padding: 2rem;
        }

        .login-card {
            background: #ffffff;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }

        .login-header {
            /* الهيدر بنفس لون الخلفية الكحلي */
            background-color: #1a3c6d;
            padding: 2.5rem 2rem;
            text-align: center;
            color: white;
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }

        .login-logo-circle {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1rem;
        }

            .login-logo-circle ion-icon {
                font-size: 2.5rem;
                color: white;
            }

        .login-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin: 0;
        }

        .login-subtitle {
            opacity: 0.8;
            font-size: 0.95rem;
            margin-top: 8px;
        }

        .login-body {
            padding: 3rem;
        }

        .instruction-text {
            text-align: center;
            color: #64748b;
            margin-bottom: 2rem;
            font-size: 1rem;
            line-height: 1.6;
        }

        .form-label {
            display: block;
            font-weight: 600;
            color: #1a3c6d;
            margin-bottom: 0.5rem;
            text-align: right;
        }

        .form-control {
            width: 100%;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            padding: 0.85rem 1rem;
            box-sizing: border-box;
            text-align: right;
            background-color: #f8fafc;
            margin-bottom: 1.5rem;
            font-family: 'Cairo', sans-serif;
        }

            .form-control:focus {
                border-color: #1a3c6d;
                outline: none;
                background-color: #fff;
            }

        /* زر الإرسال بنفس تصميم زر الدخول والإنشاء */
        .btn-reset {
            background-color: #1a3c6d;
            border: none;
            border-radius: 8px;
            padding: 1rem;
            font-weight: 600;
            font-size: 1.1rem;
            color: white;
            width: 100%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            /* منع التحريك تماماً */
            transition: none !important;
        }

            .btn-reset:hover {
                transform: none !important;
                box-shadow: none !important;
                background-color: #1a3c6d !important;
            }

        .login-links {
            text-align: center;
            margin-top: 2rem;
        }

            .login-links a {
                color: #1a3c6d;
                text-decoration: none;
                font-weight: 600;
                display: inline-flex;
                align-items: center;
                gap: 0.5rem;
            }

                .login-links a:hover {
                    text-decoration: underline;
                }

        .copyright {
            color: rgba(255, 255, 255, 0.7);
            text-align: center;
            margin-top: 1.5rem;
            font-size: 0.85rem;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <div class="login-logo-circle">
                    <ion-icon name="key-outline"></ion-icon>
                </div>
                <h1 class="login-title">استعادة كلمة المرور</h1>
                <p class="login-subtitle">نحن هنا لمساعدتك على العودة إلى حسابك</p>
            </div>

            <div class="login-body">
                <p class="instruction-text">
                    يرجى إدخال البريد الإلكتروني المرتبط بحسابك، وسنقوم بإرسال رابط آمن لإعادة تعيين كلمة المرور الخاصة بك.
                </p>

                <form asp-controller="Account" asp-action="ForgetPassword" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
                        <input type="email" asp-for="Email" class="form-control" placeholder="example@email.com" required>
                    </div>

                   
                    <a asp-controller="Account" asp-action="ForgetPassword" class="btn-reset">
                        <ion-icon name="send-outline"></ion-icon>
                        إرسال رابط استعادة الوصول
                    </a>
                    <div class="login-links">
                        <a asp-controller="Account" asp-action="Login">
                            <ion-icon name="arrow-forward-outline"></ion-icon>
                            العودة لتسجيل الدخول
                        </a>
                    </div>
                </form>
            </div>
        </div>

        <p class="copyright">
            © 2026 InvestLink. جميع الحقوق محفوظة.
        </p>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
</body>
</html>