@using InvestLink_BLL.Interfaces
@using InvestLink_DAL.Entities
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> signInManager
@inject IProject iproject;
@inject IProjectInvestor iprojectInvestor;
@inject IInvestor iinvestor;

@{
    Layout = null;
    ViewData["Title"] = "مرحباً بك";
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>InvestLink - مرحباً بك</title>

    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">

    <style>
        :root {
            --primary-color: #1a3c6d; /* نفس اللون الكحلي المستخدم سابقاً */
            --bg-color: #fcfcfc;
            --text-gray: #718096;
        }

        body {
            background-color: var(--bg-color);
            font-family: 'Cairo', sans-serif;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0;
        }

        .welcome-card {
            background: #ffffff;
            border-radius: 16px;
            padding: 3rem 2rem;
            width: 100%;
            max-width: 500px; /* عرض مناسب للبطاقة الترحيبية */
            text-align: center;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.05);
            border: 1px solid #f0f0f0;
        }

        .icon-container {
            width: 80px;
            height: 80px;
            background-color: #f1f5f9; /* خلفية رمادية زرقاء فاتحة للأيقونة */
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto 1.5rem auto;
            color: var(--primary-color);
            font-size: 2.5rem;
        }

        .welcome-title {
            color: var(--primary-color);
            font-weight: 700;
            font-size: 1.5rem;
            margin-bottom: 1rem;
        }

        .welcome-text {
            color: var(--text-gray);
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 2.5rem;
            padding: 0 1rem;
        }

        .btn-start {
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 8px;
            padding: 0.8rem 1.5rem;
            font-weight: 600;
            font-size: 1rem;
            width: 100%;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 0.5rem;
            text-decoration: none; /* إزالة الخط تحت الرابط */
            transition: all 0.2s ease;
        }

            .btn-start:hover {
                background-color: #15325b;
                color: white;
                transform: translateY(-1px);
            }

    </style>
</head>
<body>

    <div class="container">
        <div class="d-flex justify-content-center">

            <div class="welcome-card">
                <div class="icon-container">
                    <ion-icon name="person-add-outline"></ion-icon>
                </div>

                <h2 class="welcome-title">مرحباً بك في InvestLink</h2>
                <p class="welcome-text">
                    لبدء رحلتك الاستثمارية والاستفادة من خدماتنا، يرجى استكمال ملفك الاستثماري.
                </p>

                <a asp-controller="Investor" asp-action="Create" class="btn-start">
                    <ion-icon name="add-circle-outline" style="font-size: 1.2rem;"></ion-icon>
                    إضافة البيانات الاستثمارية
                </a>
            </div>

        </div>
    </div>

    <script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>